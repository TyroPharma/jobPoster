  <div class="row">
    <div class="col-centered col-md-6 col-sm-6 col-xs-10 pad-top content-section text-center">
      <% @jobs.each do |jobs| %>
      <div class="panel panel-default job-panel" id="index">
        <div class="panel-body">
    <!-- Beginning of Job listings -->

        <ul>
          <li>
            <h2>
              <a href="/jobs/<%= jobs.id %>">
                <%= jobs.title %>
              </a>
            </h2>
          </li>
          <li>
            <h4>
              <%= jobs.company %>
            </h4>
          </li>
          <li>
            <h4>
              <%= jobs.location %>
            </h4>
          </li>
        </ul>
        </div>
        <div class="panel-footer">
        <ul>
          <li>
            <a href="/jobs/<%=jobs.id %>/edit">
              Edit
            </a>
          </li>
          <li>
            <form action="/jobs/<%= jobs.id %>/delete" method="POST">
              <button>Delete</button>
            </form>
          </li>
        </ul>
      </div>
    </div>
    <% end %>
  </div>
