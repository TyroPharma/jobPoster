  <div class="container">
    <div class="text-container"
    <form class="form-horizontal" action="/jobs/<%= @job.id %>" method="post">
      <div class="form-group">
        <label for="job[title]">Job Title:</label>
        <input name="job[title]" value="<%= "#{@job.title}" %>" class="form-control">
      </div>
      <div class="form-group">
        <label for="job[company]">Company Name:</label>"
        <input name="job[company]" value="<%= "#{@job.company}" %>" class="form-control">
      </div>
      <div class="form-group">
        <label for="job[location]">Location:</label>
        <input name="job[location]" value="<%= "#{@job.location}" %>" class="form-control">
      </div>
      <div class="form-group">
        <label for="job[logo_url]">Company Logo:</label>
        <input name="job[logo_url]" value="<%= "#{@job.logo_url}" %>" class="form-control">
      </div>
      <div class="form-group">
        <label for="job[contact]">Contact:</label>
        <input name="job[contact]" value="<%= "#{@job.contact}" %>" class="form-control">
      </div>
      <div class="form-group">
        <label for="job[description]">Job Description:</label>
        <textarea name="job[description]" maxlength="2000" cols="50" rows="10" placeholder="Job Description" class="form-control"><%= @job.description %></textarea>
      </div>
      <input type="submit" value="Save" class="btn btn-primary">
    </form>
  </div>
