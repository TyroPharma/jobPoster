      <div class="form-group">
          <label for="job[title]">Job Title:</label>
          <input name="job[title]" class="form-control">
        </div>
        <div class="form-group">
          <label for="job[company]">Company Name:</label>
          <input name="job[company]" class="form-control">
        </div>
        <div class="form-group">
          <label for="job[location]">Location:</label>
          <input name="job[location]" class="form-control">
        </div>
        <div class="form-group">
          <label for="job[logo_url]">Company Logo:</label>
          <input name="job[logo_url]" class="form-control">
