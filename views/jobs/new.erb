          <label for="job[contact]">Contact:</label>
          <input name="job[contact]" class="form-control">
        </div>
        <div class="form-group">
          <label for="job[description]">Job Description:</label>
          <textarea maxlength="2000" cols="35" rows="10" placeholder="Job Description" name="job[description]" class="form-control"></textarea>
